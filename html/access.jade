extend ./_layout

block head
  title Cafe LeSinaへのアクセス | 焼き物の町、益子のカフェ
  meta(name="description", content="焼き物/陶器で有名な町、益子にあるカフェLeSiNaへのアクセスです。")

block content
  .map
    ol.ui.breadcrumb(itemscope, itemtype="http://schema.org/BreadcrumbList")
      each crumb, index in breadcrumb.access
        li
          a.section(class=crumb.active? 'active' : '', itemprop="item", href=crumb.url)
            span(itemprop="name")= crumb.name

          meta(itemprop="position", content=index + 1)
          if (!crumb.active)
            i.right.angle.icon.divider

    h1.page-title
      i.car.icon
      | アクセス

    p
      a(href="http://www.tsukamoto.net/") つかもと
      | 内、作家館の隣にあります。

    .ui.embed(data-url="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3208.7567685869317!2d140.1147483153098!3d36.463433980019445!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6021fb6be5bd5641%3A0x78ae507768c322b3!2z44Gk44GL44KC44GoIOmZtuiKuOS9k-mok-aVmeWupA!5e0!3m2!1sen!2sjp!4v1447247603264")

    .routes
      h2.page-sub-title お車をご利用の場合
      h3.page-sub-title 東北自動車道のご利用
      img(src='/img/route_by_tohoku_motorway.png', alt='東北自動車道をご利用しての行き方')
      h3.page-sub-title 常磐自動車道のご利用
      img(src='/img/route_by_jouban_motorway.png', alt='東北自動車道をご利用しての行き方')
      h2.page-sub-title 電車をご利用の場合
      h3.page-sub-title 東北新幹線をご利用
      img(src='/img/route_by_tohoku_bullet_train.png', alt='東北新幹線をご利用しての行き方')
      h3.page-sub-title JR宇都宮線をご利用
      img(src='/img/route_by_tohoku_line.png', alt='JR宇都宮線をご利用しての行き方')
      h3.page-sub-title JR水戸線をご利用
      img(src='/img/route_by_mito_line.png', alt='JR水戸線をご利用しての行き方')
